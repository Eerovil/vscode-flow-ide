{
  "name": "vscode-flow-ide",
  "displayName": "vscode-flow-ide",
  "description": "Visual studio code Flowtype support",
  "version": "0.0.1",
  "publisher": "gcazaciuc",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:javascriptreact",
    "onLanguage:javascript"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "flow.coverage",
        "title": "Flow-IDE: Toggle Flowtype coverage"
      }
    ],
     "configuration": {
            "type": "object",
            "title": "Flow-IDE Configurations",
            "properties": {
                "flowide.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Is flow enabled"
                },
                "flowide.useCodeSnippetsOnFunctionSuggest": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether should autocomplete params name"
                },
                "flowide.pathToFlow": {
                    "type": "string",
                    "default": "",
                    "description": "Path to flow binary"
                }
            }
        }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  },
  "dependencies": {
    "cross-spawn": "^4.0.2"
  },
  "icon": "flow-logo.png",
  "repository": {
      "type": "git",
      "url": "https://github.com/gcazaciuc/vscode-flow-ide"
  },
  "bugs": {
      "url": "https://github.com/gcazaciuc/vscode-flow-ide/issues"
  }
}
